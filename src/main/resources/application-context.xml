<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.densev.elastic*"/>

    <bean id="mapperProvider" class="com.densev.elastic.utility.MapperProvider"/>
    <bean id="mapper" factory-bean="mapperProvider" factory-method="getMapper"/>

    <bean id="connectionFactory" class="com.densev.elastic.repository.ConnectionFactory"/>
    <bean id="elasticClient" factory-bean="connectionFactory" factory-method="getClient"/>

    <bean id="jsonFactoryProvider" class="com.densev.elastic.utility.JsonFactoryProvider"/>
    <bean id="jsonFactory" factory-bean="jsonFactoryProvider" factory-method="getFactory"/>

</beans>